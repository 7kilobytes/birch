#!/usr/bin/env bash
#
# birch - a simple irc client in bash

clean() {
    term_reset
    rm -f "$temp_dir/birch-$pid-"*
    kill 0
}

hist_focus() {
    : >> "$temp_dir/birch-$pid-$chan"
    ln -sf "$temp_dir/birch-$pid-$chan" "$temp_dir/birch-$pid--current"
}

term_setup() {
    printf '\e[2J\e[1;%sr\e[999H' "$((LINES-1))"
}

term_reset() {
    printf '\e[2J\e[;r'

    exec 69>&-
}

term_size() {
    resize=

    shopt -s checkwinsize; (:;:)
}

irc_setup() {
    exec 69<>"/dev/tcp/${host:=irc.freenode.net}/${port:-6667}" || {
        printf '%s\n' "error: Couldn't connect to $host." >&2
        exit 1
    }

    IFS=, read -ra channels <<< "${chan:=#kisslinux}"
    chan=${channels[0]}

    printf 'NICK %s\n' "${nick:=$USER}" >&69
    printf 'USER %s - - :%s\n' "$nick" "$nick" >&69
    printf 'PASS %s\n' "${pass:-}" >&69
    printf 'JOIN %s\n' "${channels[@]}" >&69

    hist_focus
}

irc_parse() {
    mesg=${1#* :}
    www=${1%%$mesg*}

    read -ra args <<< "${www##:}"
    IFS='!@' read -r unick _ _ <<< "${args[0]}"
}

irc_print() {
    printf '\e[?25l\e7\e[%sH' "$((LINES-1))"

    if [[ $2 == \#* && "$2" != "$chan" ]]; then
        printf '%s\n' "$1" >> "$temp_dir/birch-$pid-$2"

        [[ " ${channels[*]} " != *" $chan "* ]] &&
            channels+=("$chan")

    else
        printf '\r%s\n' "$1"
        printf '%s\n'   "$1" >> "$temp_dir/birch-$pid--current"
    fi 2>/dev/null

    printf '\e8\e[?25h'
}

irc_mesg() {
    mesg=$(fold -sw 60 <<< "$1")
    mesg=${mesg//$'\n'/$'\n'           }

    printf -v out '\e[1;3%sm%10s\e[m %s' \
        "$((${#2}/2))" "${2:0:10}" "$mesg"

    irc_print "$out" "$chan"
}

irc_cmd() {
    read -ra cmd <<< "$1"

    case $1 in
        "") ;;

        :*) ;; # Prevent accidental ":" prefixing of e.g. commands

        /j*)
            printf 'JOIN %s\n'  "${cmd[1]}" >&69
            printf 'NAMES %s\n' "${cmd[1]}" >&69

            chan=$_
            resize=1

            [[ " ${channels[*]} " != *" $chan "* ]] &&
                channels+=("$chan")

            hist_focus
        ;;

        /l*)
            printf 'PART %s\n' "${cmd[1]:-$chan}" >&69
        ;;

        /me*)
            printf 'PRIVMSG %s :\001ACTION %s\001\n' "$chan" "${cmd[*]:1}" >&69

            printf -v out '%10s \e[1;3%sm%s\e[m %s' \
                "*" "$((${#nick}/2))" "$nick" "${cmd[*]:1}"

            irc_print "$out" "$chan"
        ;;

        /m*)
            printf 'PRIVMSG %s :%s\n' "${cmd[1]}" "${cmd[*]:2}" >&69
        ;;

        /n*)
            printf 'NICK %s\n' "${cmd[1]}" >&69
            nick=$_
        ;;

        /q*)
            printf 'QUIT :%s\n' "${cmd[1]}" >&69
            exit
        ;;

        /*)
            printf '%s\n' "error: ${cmd[0]} not implemented yet."
        ;;

        *)
            printf 'PRIVMSG %s %s\n' "$chan" ":$1" >&69

            irc_mesg "$1" "$nick"
        ;;
    esac
}

irc_output() {
    while read -sru 69 || :; do
        REPLY=${REPLY%%$'\r'*}

        case $REPLY in
            PING*)
                printf 'PONG%s\n' "${REPLY##PING}" >&69
            ;;

            *PRIVMSG*)
                irc_parse "$REPLY"

                [[ $mesg == *$nick* ]] &&
                    mesg=${mesg//$nick/$'\e[1;3'$((${#unick}/2))m$nick$'\e[m'}

                case $REPLY in
                    *$'\001ACTION'*$'\001'*)
                        mesg=${mesg/$'\001ACTION'}

                        printf -v out '%10s \e[1;3%sm%s\e[m %s' \
                            "*" "$((${#unick}/2))" "$unick" "${mesg/$'\001'}"
                    ;;

                    *)  irc_mesg "$mesg" "$unick" ;;
                esac

                irc_print "$out" "${args[2]}"
            ;;

            *JOIN*|*PART*|*QUIT*)
                REPLY=${REPLY:1}
                unick=${REPLY%%\!*}

                case $REPLY in
                    *JOIN*): '-->joined' ;;
                    *PART*): '<--left'   ;;
                    *QUIT*): '<--quit'   ;;
                esac

                #
                # Here are logged output examples of $REPLY and #${REPLY##*\#}
                # for our *JOIN*|*PART*|*QUIT* cases:
                #

                #
                # Example 1 (*JOIN*)
                #
                # $REPLY:          fehawen2!~fehawen2@customer-46-39-113-66
                #                  .stosn.net JOIN #kisslinux
                #
                # #${REPLY##*\#}:  #kisslinux
                #
                # COMMENT:         This works, no problems.
                #

                #
                # Example 2 (*PART*)
                #
                # $REPLY:          fehawen!~fehawen@customer-46-39-113-66
                #                  .stosn.net PART #archlinux
                #
                # #${REPLY##*\#}:  #archlinux
                #
                # COMMENT:         This works, no problems.
                #

                #
                # Example 4 (*PART*)
                #
                # $REPLY:          fehawen!~fehawen@customer-46-39-113-66
                #                  .stosn.net PART #archlinux-unregistered
                #                   :requested by EMIYA (Moving to #archlinux.)
                #
                # #${REPLY##*\#}:  #archlinux.)
                #
                # COMMENT:         This causes problems, because we're passing
                #                  "#archlinux.)" when we should be passing
                #                  "#archlinux-unregistered"
                #

                #
                # Example 4 (*QUIT*)
                #
                # $REPLY:          mantoshelis!~mmatuzas@2001:1ab8:1001:a010
                #                  :127b:44ff:fef0:334b QUIT :Ping timeout:
                #                   240 seconds
                #
                # #${REPLY##*\#}:  #mantoshelis!~mmatuzas@2001:1ab8:1001:a010
                #                  :127b:44ff:fef0:334b QUIT :Ping timeout:
                #                   240 seconds
                #
                # COMMENT:         This causes problems, because we're passing
                #                  the entire #${REPLY##*\#} which doesn't
                #                  contain any channel name
                #

                #
                # Example 5 (*QUIT*)
                #
                # $REPLY:          fehawen2!~fehawen2@customer-46-39-113-66
                #                  .stosn.net QUIT :Client Quit
                #
                # #${REPLY##*\#}:  #fehawen2!~fehawen2@customer-46-39-113-66
                #                  .stosn.net QUIT :Client Quit
                #
                # COMMENT:         Same as Example 4
                #

                #
                # PROPOSED CHANGES:
                #

                # Store our prefix and suffix (e.g. '-->joined') from case
                cas=$_

                # Keep everything after first octothorp occurence and prepend
                # an octothorp, using '#' for shortest match rather than '##'
                # for longest match
                #
                # This prevents us from getting e.g. "#archlinux.)" instead of
                # "archlinux-unregistered ..."
                cur="#${REPLY#*\#}"

                # Keep everything before first [:space:] occurence, using
                # longest match here with '%%' rather than shortest match
                # with '%'
                cur=${cur%% *}

                # If case is *QUIT* we have no reference to channel in
                # $REPLY or $cur, so we fall back to using $chan
                [[ "${cas:3}" == "quit" ]] && cur=$chan

                printf -v out '%10s \e[1;3%sm%s\e[m %s \e[1m%s\e[m' \
                    "${cas::3}" "$((${#unick}/2))" "$unick" \
                    "has ${cas:3}" "$cur"

                irc_print "$out" "$cur"
            ;;

            *NOTICE*)
                irc_print "${REPLY##*NOTICE }" "$chan"
            ;;

            *NICK*)
                irc_parse "$REPLY"

                printf -v out '%10s %s\n' "--" \
                    "$unick is now known as $mesg"

                irc_print "$out" "$chan"
            ;;

            *353*)
                chan=\#${REPLY##*\#}
                chan=${chan/ *}
            ;;

            *366*) ;;

            *)
                [[ $REPLY == *376* && $comm ]] && irc_cmd "$comm"

                irc_print "$REPLY" "$chan"
            ;;
        esac
    done
}

get_args() {
    while getopts :s:u:p:c:x:P:v opt; do
        case $opt in
            s)  host=$OPTARG ;;
            u)  nick=$OPTARG ;;
            p)  pass=$OPTARG ;;
            P)  port=$OPTARG ;;
            c)  chan=$OPTARG ;;
            x)  comm=$OPTARG ;;

            \?) usage ;;

            v)
                printf '%s\n' "$version"
                exit
            ;;

            :)
                printf 'Option -%s requires an argument.\n' "$OPTARG" >&2
                exit 1
            ;;
        esac
    done
}

usage() {
    printf 'usage: birch [-s host -u nick -p pass -P port -c channel]\n'
    exit 1
}


main() {
    pid=$$
    version='birch 0.0.1'

    get_args "$@"
    term_size

    : > "${temp_dir:=/tmp}/birch-$pid--current"

    irc_setup
    term_setup

    trap clean    INT EXIT
    trap resize=1 WINCH

    irc_output &

    for ((;;)) {
        read -erp "$chan (${cch:=0}/$((${#channels[@]}-1))) > " mesg && {
            irc_cmd "$mesg"
            printf '\e[2K'
        }

        [[ $resize ]] && {
            term_size
            term_setup

            printf '\e[?25l\e7\e[%sH' "$((LINES-1))"
            printf '%s\n' "$(< "$temp_dir/birch-$pid--current")"
            printf '\e8\e[?25h'
        }
    }

    wait
    return 0
}

main "$@"
